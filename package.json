{
  "name": "sika-activty-service",
  "version": "0.1.2",
  "description": "RESTful API for interacting with activities. Lives at [https://activity-service.fly.dev](https://activity-service.fly.dev).",
  "engines": {
    "node": ">= 20.8.1"
  },
  "scripts": {
    "start": "pm2 start dist/index.js -i 'max'",
    "dev": "docker compose config && docker compose up --abort-on-container-exit",
    "lint": "npm run lint:ts ; npm run format",
    "lint:ts": "eslint --ignore-path .gitignore --fix .",
    "format": "prettier . --write",
    "build": "tsc",
    "build:docker": "docker compose build",
    "test": "docker compose run api sh -c 'npm run _test:unit && npm run _test:integration'",
    "test:unit": "docker compose run api npm run _test:unit",
    "test:unit:watch": "docker compose run api npm run _test:unit:watch",
    "test:integration": "docker compose run api npm run _test:integration",
    "test:integration:watch": "docker compose run api npm run _test:integration:watch",
    "_dev": "nodemon -L src/index.ts",
    "_test:unit": "vitest --run src",
    "_test:unit:watch": "vitest --watch src",
    "_test:integration": "vitest --run --no-threads integration-tests",
    "_test:integration:watch": "vitest --watch --no-threads integration-tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikaeducation/activity-service.git"
  },
  "keywords": [],
  "author": "Kyle Coberly",
  "license": "Proprietary",
  "bugs": {
    "url": "https://github.com/sikaeducation/activity-service/issues"
  },
  "homepage": "https://github.com/sikaeducation/activity-service#readme",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "axios": "^1.1.3",
    "inflected": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^3.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "octokit": "^2.0.10",
    "pm2": "^5.3.0",
    "@feathersjs/adapter-commons": "^5.0.11",
    "@feathersjs/authentication": "^5.0.11",
    "@feathersjs/authentication-client": "^5.0.11",
    "@feathersjs/configuration": "^5.0.11",
    "@feathersjs/errors": "^5.0.11",
    "@feathersjs/express": "^5.0.11",
    "@feathersjs/feathers": "^5.0.11",
    "@feathersjs/mongodb": "^5.0.11",
    "@feathersjs/schema": "^5.0.11",
    "@feathersjs/socketio": "^5.0.11",
    "@feathersjs/transport-commons": "^5.0.11",
    "@feathersjs/typebox": "^5.0.11",
    "compression": "^1.7.4",
    "mongodb": "^6.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.5.1",
    "@sikaeducation/eslint-config": "^3.0.3",
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.12",
    "@types/inflected": "^1.1.29",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.8.1",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@feathersjs/cli": "^5.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "expect": "^29.7.0",
    "nodemon": "^2.0.19",
    "prettier": "^3.0.3",
    "sinon": "^14.0.2",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "mongodb",
    "framework": "express",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  }
}
