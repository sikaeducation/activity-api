{
  "name": "sika-activty-service",
  "version": "0.1.2",
  "description": "RESTful API for interacting with activities. Lives at [https://activity-service.fly.dev](https://activity-service.fly.dev).",
  "directories": {
    "api": "api",
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "docker compose -f .docker/docker-compose.yml -f .docker/docker-compose.dev.yml up",
    "_dev": "nodemon -L src/index.ts",
    "lint": "eslint . --ext .ts --fix",
    "build:docker": "docker compose -f .docker/docker-compose.yml build",
    "test": "docker compose -f ./docker/docker-compose.test.yml -f ./docker/docker-compose.test.yml run test",
    "_test": "npm run _test:unit && npm run _test:integration",
    "test:unit": "docker compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run api npm run _test:unit",
    "_test:unit": "vitest --run --dir src",
    "test:unit:watch": "docker compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run api npm run _test:unit:watch",
    "_test:unit:watch": "vitest --watch --dir src",
    "test:integration": "docker compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run api npm run _test:integration",
    "_test:integration": "cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"tests/integration/**/*.ts\" --force-exit --tags \"not @skip\"",
    "test:integration:watch": "docker compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run api npm run _test:integration:watch",
    "_test:integration:watch": "nodemon -L -x 'cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"tests/integration/**/*.ts\" --force-exit --tags \"not @skip\"' -e ts,feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikaeducation/activity-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sikaeducation/activity-service/issues"
  },
  "homepage": "https://github.com/sikaeducation/activity-service#readme",
  "dependencies": {
    "@cucumber/cucumber": "^8.5.1",
    "@feathersjs/express": "^4.5.15",
    "@feathersjs/feathers": "^4.5.15",
    "@feathersjs/transport-commons": "^4.5.15",
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/inflected": "^1.1.29",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.7",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "adm-zip": "^0.5.9",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect": "^28.1.3",
    "express": "^4.18.1",
    "feathers-mongoose": "^8.5.1",
    "inflected": "^2.1.0",
    "jest": "^29.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^3.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.9.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "octokit": "^2.0.10",
    "sinon": "^14.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
