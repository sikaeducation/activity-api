{
  "name": "sika-activty-service",
  "version": "0.1.2",
  "description": "RESTful API for interacting with activities. Lives at [https://activity-service.fly.dev](https://activity-service.fly.dev).",
  "scripts": {
    "start": "pm2 start dist/index.js -i 'max'",
    "dev": "docker compose config && docker compose up --abort-on-container-exit",
    "_dev": "nodemon -L src/index.ts",
    "lint": "npm run lint:ts ; run format",
    "lint:ts": "eslint  --ignore-path .gitignore --fix .",
    "format": "prettier . --write",
    "build": "tsc",
    "build:docker": "docker compose build",
    "test": "docker compose run api sh -c 'npm run _test:unit && npm run _test:integration'",
    "test:unit": "docker compose run api npm run _test:unit",
    "_test:unit": "vitest --run src features",
    "test:unit:watch": "docker compose run api npm run _test:unit:watch",
    "_test:unit:watch": "vitest --watch src features",
    "test:integration": "docker compose run api npm run _test:integration",
    "_test:integration": "cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"features/**/*.ts\" --force-exit --tags \"not @skip\"",
    "test:integration:watch": "docker compose run api npm run _test:integration:watch",
    "_test:integration:watch": "nodemon -L -x 'cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"features/**/*.ts\" --force-exit --tags \"not @skip\"' -e ts,feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikaeducation/activity-service.git"
  },
  "keywords": [],
  "author": "Kyle Coberly",
  "license": "Proprietary",
  "bugs": {
    "url": "https://github.com/sikaeducation/activity-service/issues"
  },
  "homepage": "https://github.com/sikaeducation/activity-service#readme",
  "dependencies": {
    "@feathersjs/express": "^4.5.15",
    "@feathersjs/feathers": "^4.5.15",
    "@feathersjs/transport-commons": "^4.5.15",
    "adm-zip": "^0.5.9",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "feathers-mongoose": "^8.5.1",
    "inflected": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^3.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.9.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "octokit": "^2.0.10",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.5.1",
    "@rushstack/eslint-patch": "^1.5.1",
    "@sikaeducation/eslint-config": "^3.0.3",
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.20",
    "@types/inflected": "^1.1.29",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.8.1",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.22.0",
    "expect": "^29.7.0",
    "nodemon": "^2.0.19",
    "prettier": "^3.0.3",
    "sinon": "^14.0.2",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vitest": "^0.34.6"
  }
}
