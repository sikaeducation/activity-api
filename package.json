{
  "name": "sika-activty-service",
  "version": "0.1.2",
  "description": "RESTful API for interacting with activities. Lives at [http://sika-activity-api.herokuapp.com](http://sika-activity-api.herokuapp.com).",
  "directories": {
    "api": "api",
    "test": "tests"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.dev.yml up",
    "_dev": "nodemon -L src/index.ts",

    "prepare": "husky install",
    "lint": "eslint . --ext .ts --fix",
    "build": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.ci.yml build",
    "_build": "npm ci && tsc",

    "test": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.ci.yml run tests",
    "test:watch": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml up",
    "_test": "npm run _test:unit && npm run _test:integration",
    "_test:unit": "jest",
    "_test:integration": "cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"tests/integration/**/*.ts\" --force-exit --tags \"not @skip\"",

    "test:unit:watch": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run unit_tests",
    "_test:unit:watch": "jest --watchAll",
    "test:integration:watch": "docker-compose -f .docker/docker-compose.yml -f .docker/docker-compose.test.yml run integration_tests",
    "_test:integration:watch": "nodemon -L -x 'cucumber-js --fail-fast --require-module \"ts-node/register\" --require \"tests/integration/**/*.ts\" --force-exit --tags \"not @skip\"' -e ts,feature"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikaeducation/activity-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sikaeducation/activity-service/issues"
  },
  "homepage": "https://github.com/sikaeducation/activity-service#readme",
  "dependencies": {
    "@cucumber/cucumber": "^8.5.1",
    "@feathersjs/express": "^4.5.15",
    "@feathersjs/feathers": "^4.5.15",
    "@feathersjs/transport-commons": "^4.5.15",
    "@octokit/rest": "^19.0.5",
    "@types/adm-zip": "^0.5.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.7",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "adm-zip": "^0.5.9",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "expect": "^28.1.3",
    "express": "^4.18.1",
    "feathers-mongoose": "^8.5.1",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "mongodb": "^4.9.0",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "sinon": "^14.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
